{
  "hooks": {
    "SessionStart": {
      "*": [
        {
          "type": "command",
          "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/log-session-start.sh",
          "timeout": 2000
        }
      ]
    },
    "SessionEnd": {
      "*": [
        {
          "type": "command",
          "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/log-session-end.sh",
          "timeout": 2000
        }
      ]
    }
  }
}
